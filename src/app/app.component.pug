.top-left(*ngIf="topLeftImage")
	.image([style.background-image]="topLeftImage.url")
	.imageText 
		h3 {{topLeftImage.directory}}
.top-right(*ngIf="topRightImage")
	.image([style.background-image]="topRightImage.url")
	.imageText 
		h3 {{topRightImage.directory}}
.bottom-left(*ngIf="bottomLeftImage")
	.image([style.background-image]="bottomLeftImage.url")
	.imageText 
		h3 {{bottomLeftImage.directory}}
.bottom-right(*ngIf="bottomRightImage")
	.image([style.background-image]="bottomRightImage.url")
	.imageText 
		h3 {{bottomRightImage.directory}}
.countdown
	| ({{countdownMinutes}}:{{countdownSeconds}}