.top-left(*ngIf="topLeftImage")
	.image([style.background-image]="'url(' + topLeftImage.url + ')'", [ngClass]="{imageBackgroundCover: topLeftImage.backgroundCover}")
	.imageText 
		h3 {{topLeftImage.directoryName}}
.top-right(*ngIf="topRightImage")
	.image([style.background-image]="'url(' + topRightImage.url + ')'", [ngClass]="{imageBackgroundCover: topRightImage.backgroundCover}")
	.imageText 
		h3 {{topRightImage.directoryName}}
.bottom-left(*ngIf="bottomLeftImage")
	.image([style.background-image]="'url(' + bottomLeftImage.url + ')'", [ngClass]="{imageBackgroundCover: bottomLeftImage.backgroundCover}")
	.imageText 
		h3 {{bottomLeftImage.directoryName}}
.bottom-right(*ngIf="bottomRightImage")
	iframe(src="http://192.168.1.127:8080/")
