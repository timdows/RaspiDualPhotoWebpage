.top-left(*ngIf="topLeftImage")
	.image([style.background-image]="'url(' + topLeftImage.url + ')'")
	.imageText 
		h3 {{topLeftImage.directoryName}}
.top-right(*ngIf="topRightImage")
	.image([style.background-image]="'url(' + topRightImage.url + ')'")
	.imageText 
		h3 {{topRightImage.directoryName}}
.bottom-left(*ngIf="bottomLeftImage")
	.image([style.background-image]="'url(' + bottomLeftImage.url + ')'")
	.imageText 
		h3 {{bottomLeftImage.directoryName}}
.bottom-right(*ngIf="bottomRightImage")
	.image([style.background-image]="'url(' + bottomRightImage.url + ')'")
	.imageText 
		h3 {{bottomRightImage.directoryName}}
.countdown
	| ({{countdownMinutes}}:{{countdownSeconds}})
